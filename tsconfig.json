{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    // "declarationDir": "./typings",
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "./",
    "importHelpers": true,
    // "types": ["node", "reflect-metadata"],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
